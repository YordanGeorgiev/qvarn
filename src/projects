import qvarn


resource_type = u'project'


project_prototype_v0 = {
    u'type': u'',
    u'id': u'',
    u'revision': u'',
}


project_prototype_current = project_prototype_v1 = {
    u'type': u'',
    u'id': u'',
    u'revision': u'',
    u'names': [u''],
    u'project_responsible_org': u'',
    u'project_responsible_person': u'',
    u'project_ids': [
        {
            u'project_id_type': u'',
            u'project_id': u'',
        },
    ],
}


project_sync_prototype = {
    u'sync_sources': [
        {
            u'sync_source': u'',
            u'sync_id': u'',
        },
    ],
    u'sync_revision': u'',
}


resource_type_spec = {
    u'path': u'/projects',
    u'type': u'project',
    u'versions': [
        {
            u'version': u'v0',
            u'prototype': project_prototype_v0,
        },
        {
            u'version': u'v1',
            u'prototype': project_prototype_v1,
            u'subpaths': {
                u'sync': {
                    u'prototype': project_sync_prototype,
                },
            },
        },
    ],
}

application = qvarn.create_resource_server(resource_type_spec)
